<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<!-- Loi cho vui -->
<web-app>
	  <display-name>Archetype Created Web Application</display-name>
	  <!-- Servlet -->
	  <servlet>
	  	<servlet-name>AppListener</servlet-name>
	  	<display-name>AppListener</display-name>
	  	<description></description>
	  	<servlet-class>controller.AppListener</servlet-class>
	  </servlet>
	  
	  <servlet>
	  	<servlet-name>login</servlet-name>
	  	<display-name>login</display-name>
	  	<description></description>
	  	<servlet-class>controller.login</servlet-class>
	  </servlet>
	  <servlet>
	  	<servlet-name>admin</servlet-name>
	  	<display-name>admin</display-name>
	  	<description></description>
	  	<servlet-class>controller.admin</servlet-class>
	  </servlet>
	  
	  <!-- Servlet-Mapping -->
	  <servlet-mapping>
	  	<servlet-name>AppListener</servlet-name>
	  	<url-pattern>/app-listener</url-pattern>
	  </servlet-mapping>
	  
	  <servlet-mapping>
	  	<servlet-name>login</servlet-name>
	  	<url-pattern>/login</url-pattern>
	  </servlet-mapping>
	  <servlet-mapping>
	  	<servlet-name>admin</servlet-name>
	  	<url-pattern>/admin</url-pattern>
	  </servlet-mapping>
	  <!-- 
	  Filter
	  <filter>
	  	<filter-name>fil</filter-name>
	  	<filter-class>filter.filterTest</filter-class>
	  </filter>
	  
	  Filter-Mapping
	  <filter-mapping>
	  	<filter-name>fil</filter-name>
	  	<url-pattern>/login</url-pattern>
	  </filter-mapping>
	   -->
</web-app>
